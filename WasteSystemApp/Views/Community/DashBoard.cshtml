<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f5f7fa;
        }

        .sidebar {
            width: 250px;
            background-color: #4a4e69;
            padding: 20px;
            color: #fff;
            height: 100vh;
        }

            .sidebar .logo {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 20px;
                color: #f9f9f9;
            }

            .sidebar nav ul {
                list-style-type: none;
            }

                .sidebar nav ul li {
                    margin: 15px 0;
                }

                    .sidebar nav ul li a {
                        color: #a8dadc;
                        text-decoration: none;
                        font-size: 1.1rem;
                        display: block;
                        padding: 10px;
                        border-radius: 5px;
                        transition: background-color 0.3s;
                    }

                        .sidebar nav ul li a.active,
                        .sidebar nav ul li a:hover {
                            background-color: #3a3d55;
                            color: #fff;
                        }

        .main-content {
            flex: 1;
            padding: 20px;
            background-color: #ffffff;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 20px;
            border-bottom: 1px solid #ddd;
        }

        .search-bar input {
            width: 200px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .icons .notification-icon,
        .icons .profile-icon {
            font-size: 1.5rem;
            margin-left: 15px;
            cursor: pointer;
        }

        .dashboard-widgets {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .widget {
            background-color: #fafafa;
            border-radius: 10px;
            padding: 20px;
            flex: 1;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .widget h3 {
                font-size: 1.2rem;
                margin-bottom: 10px;
            }

            .widget .progress-bar {
                height: 10px;
                background-color: #ddd;
                border-radius: 5px;
                overflow: hidden;
            }

                .widget .progress-bar div {
                    height: 100%;
                    background-color: #4a90e2;
                }

        .chart-section {
            margin-top: 30px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .chart-section h2 {
                margin-bottom: 15px;
            }

    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="logo">AdminDash</div>
        <nav>
            <ul>
                <li><a href="#" class="active">Dashboard</a></li>
                <li><a href="#">Users</a></li>
                <li><a href="#">Reports</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <header>
            <div class="search-bar">
                <input type="text" placeholder="Search...">
            </div>
            <div class="icons">
                <span class="notification-icon">🔔</span>
                <span class="profile-icon">👤</span>
            </div>
        </header>

        <!-- Dashboard Widgets -->
        <section class="dashboard-widgets">
            <div class="widget">
                <h3>New Customers</h3>
                <div class="progress-bar"><div style="width: 90%"></div></div>
                <p>90% of goal</p>
            </div>
            <div class="widget">
                <h3>Total Income</h3>
                <p>$680</p>
                <small>+18%</small>
            </div>
        </section>

        <!-- Revenue Chart Section -->
        <section class="chart-section">
            <h2>Revenue Forecast</h2>
            <canvas id="revenueChart"></canvas>
        </section>
    </div>
</body>
</html>
