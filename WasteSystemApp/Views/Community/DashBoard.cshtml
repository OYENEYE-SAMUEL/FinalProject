@using Domain.Enum
@model IEnumerable<Application.DTOs.SubscriptionResponseModel>


    @{
        Layout = "_CommunityLayout";
    }

<head>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Template/landing/css/bootstrap.min.css" rel="stylesheet">
   <style>
        .card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
        .card-header {
            padding: 1.5rem;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .card-body ul li {
            margin: 10px 0;
            font-size: 1rem;
            color: #555;
        }
        .btn {
            padding: 0.75rem 2rem;
            font-size: 1rem;
        }
    </style>
</head>


            <body>
                <div class="container-fluid py-5">
                    <div class="container py-5">
                        <div class="text-center mb-5">
                            <h5 class="mb-2 px-3 py-1 text-dark rounded-pill d-inline-block border border-2 border-primary">
                                Our Pricing
                            </h5>
                        </div>

                        @if (Model != null && Model.Any())
                        {
                            <div class="row g-4">
                                @if (Model.Any(e => e.CurrentPlanType == PlanType.Basic))
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-header bg-primary text-white text-center rounded-top">
                                                <h2>Basic</h2>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="text-primary">
                                                    @Model.FirstOrDefault(e => e.CurrentPlanType == PlanType.Basic)?.Price.ToString("C")
                                                    <span class="text-secondary fs-6">/weekly</span>
                                                </h3>
                                                <p>Basic Waste Pickup</p>
                                                <ul class="list-unstyled">
                                                    <li><i class="fa fa-check text-success me-2"></i>Pickup Services</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Trash</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Recycling</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Yard Waste</li>
                                                </ul>
                                                <a href="@Url.Action("MakePayment", "Community")" class="btn btn-primary rounded-pill mt-3">
                                                    Buy Now
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.Any(e => e.CurrentPlanType == PlanType.Standard))
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-header bg-dark text-white text-center rounded-top">
                                                <h2>Standard</h2>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="text-dark">
                                                    @Model.FirstOrDefault(e => e.CurrentPlanType == PlanType.Standard)?.Price.ToString("C")
                                                    <span class="text-secondary fs-6">/monthly</span>
                                                </h3>
                                                <p>Standard Waste Pickup</p>
                                                <ul class="list-unstyled">
                                                    <li><i class="fa fa-check text-success me-2"></i>Lodging Solutions</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Convention Centers</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Re-Service</li>
                                                </ul>
                                                <a href="@Url.Action("MakePayment", "Community")" class="btn btn-dark rounded-pill mt-3">
                                                    Buy Now
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.Any(e => e.CurrentPlanType == PlanType.Premium))
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-header bg-success text-white text-center rounded-top">
                                                <h2>Premium</h2>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="text-success">
                                                    @Model.FirstOrDefault(e => e.CurrentPlanType == PlanType.Premium)?.Price.ToString("C")
                                                    <span class="text-secondary fs-6">/yearly</span>
                                                </h3>
                                                <p>Premium Waste Pickup</p>
                                                <ul class="list-unstyled">
                                                    <li><i class="fa fa-check text-success me-2"></i>Dumpster Rental</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Construction Waste</li>
                                                    <li><i class="fa fa-check text-success me-2"></i>Bulk Pickup</li>
                                                </ul>
                                                <a href="@Url.Action("MakePayment", "Community")" class="btn btn-success rounded-pill mt-3">
                                                    Buy Now
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-danger">No subscriptions available at the moment.</p>
                        }
                    </div>
                </div>
            </body>





